{
  "name": "escrowagent",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev:start": "ts-node-dev --watch -- ./scripts/*",
    "lint": "tslint --config tslint.json --project tsconfig.json",
    "deploy:testnet": "dotenv -e .env.testnet  -- npx hardhat --network testnet ./scripts/deploy.ts",
    "test:ci": "dotenv -e .env.testnet -- npx hardhat test --network testnet ./test/ci.spec.ts",
    "test:local": "dotenv -e .env.local --  npx hardhat test --network localhost ./test/auction.spec.ts ./test/contract.spec.ts",
    "test:hardhat": "dotenv -e .env.local --  npx hardhat test --network hardhat ./test/contract.spec.ts ./test/auction.spec.ts",
    "test:local:ws": "npx hardhat run --network localhost ./scripts/test.ts",
    "test:ci:ws": "dotenv -e .env.testnet -- npx hardhat run --network testnet ./scripts/test.ts",
    "transpile": "tsc -w"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.7.10",
    "chai": "^4.3.4",
    "eslint": "7.32.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.6",
    "hardhat": "^2.6.1",
    "mocha-chai-jest-snapshot": "^1.1.3",
    "prettier": "2.0.5",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typechain": "^5.1.2",
    "typescript": "^4.4.2",
    "typescript-transform-paths": "^3.3.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.3.1",
    "dotenv": "^10.0.0",
    "dotenv-cli": "^4.0.0",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-watcher": "^2.1.1",
    "tsconfig-paths": "^3.11.0",
    "web3": "^1.5.2"
  }
}
